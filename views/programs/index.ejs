<%- include('../partials/header.ejs') %> 

<section class="welcome-area section-padding3">
    <div class="container" style="padding-top: 150px;">
        <div class="row">
            <% programs.forEach(program => { %>
            <div class="col-lg-5 align-self-center">
                <div class="welcome-img">
                    <a href="/programs/<%=program.id%>/show"><img  style="position:absolute; 
                    top:0; 
                    bottom:0; 
                    margin: auto;
                    width:100%;
                    " src="<%= program.programImagePath %>"  alt="">
                </div></a>
            </div>
            <div class="col-lg-7">
                <div class="welcome-text mt-5 mt-lg-0">
                    <h2><%=program.title %></h2>
                    <p class="pt-3"><%= program.description %></p>
                    <a href="/programs/<%=program.id%>/show" class="template-btn mt-3">learn more</a>
                </div>
            </div>
            <% });%>
        </div>
    </div>
</section>
<!-- Welcome Area End -->
<li><a href="/programs/new">Add New Program</a></li> 
