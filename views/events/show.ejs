  <div class="container" style=" width:50%; word-wrap: break-word;">
     <div class="row">
      <div class="text-center" style="padding-top: 90px;">
        <div><img height="300" width="300" src="<%= event.eventImagePath %>"></div>
        <h1><%= event.title %></h1>
        <p class="event_comment_description text-center" ><%= event.description %></p>
